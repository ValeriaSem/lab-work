#include <stdio.h>

int main() {
    double x;
    int n;
    printf("Введите X: ");
    scanf("%lf", &x);
    printf("Введите N (>0): ");
    scanf("%d", &n);
    double result = 0.0;
    double term = x;  
    int sign = 1;    
    long long factorial = 1;  // для (2*i+1)!  
    for (int i = 0; i <= n; i++) {
        result += sign * term;
        sign = -sign;  
        if (i < n) { 
            term = term * x * x / ((2*i+2) * (2*i+3));
        }
    } 
    printf("Приближенное значение sin(%.2f) = %.10f\n", x, result);
    return 0;
}

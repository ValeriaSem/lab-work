#include <stdio.h>
#include <math.h>

float Norm2(float A[][10], int M, int N) {
    float max_norm = 0;    
    for (int i = 0; i < M; i++) {
        float row_sum = 0;  
        for (int j = 0; j < N; j++) {
            row_sum += fabs(A[i][j]); 
        }
        if (row_sum > max_norm) {
            max_norm = row_sum;
        }
    }
    return max_norm;
}
int main() {
    float A[10][10];
    int M, N;
    printf("Введите M (строки) и N (столбцы): ");
    scanf("%d %d", &M, &N);
    if (M > 10 || N > 10) {
        printf("Ошибка: максимальный размер 10x10\n");
        return 1;
    }
    printf("Введите матрицу %dx%d:\n", M, N);
    for (int i = 0; i < M; i++) {
        for (int j = 0; j < N; j++) {
            scanf("%f", &A[i][j]);
        }
    }
    printf("\nНормы для подматриц:\n");
    for (int K = 1; K <= M; K++) {
        printf("K=%d (первые %d строк): %.2f\n", K, K, Norm2(A, K, N));
    }
    return 0;
}

#include <stdio.h>
#include <string.h>

int main() {
    char s[200];
    printf("Введите строку: ");
    fgets(s, 200, stdin);
    int min = 100, curr = 0;
    for(int i = 0; i <= strlen(s); i++) {
        if(s[i] == ' '  s[i] == '\n'  s[i] == '\0') {
            if(curr > 0 && curr < min) min = curr;
            curr = 0;
        } else {
            curr++;
        }
    }
    printf("Самое короткое слово: %d букв\n", min);
    return 0;
}
